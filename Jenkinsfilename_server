pipeline {
    agent any

    environment {
        CI = 'true'
    }
    stages {
        stage('Build') {
            steps {
                sh 'yarn install'
            }
        }
        stage('Unit Tests') {
            steps {
                sh 'yarn test -u'
            }
        }
        stage('Deliver') {
            steps {
                input message: 'Do you wish to deploy to heroku? (Click "Proceed" to continue)'
                bash '''#!/bin/bash
                                 echo "hello world"
                        dir ('/Users/Shared/Jenkins/Home/workspace/liverpool-kendo') {
                            sh('./deploy.sh')
                        }
                        '''
            }
        }
    }
}
